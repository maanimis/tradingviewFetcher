{
  "$schema": "https://json.schemastore.org/chrome-manifest.json",
  "manifest_version": 3,
  "version": "2.0",
  "name": "tradingviewFetcher",
  "description": "Fetch and save responses from TradingView script URLs",
  "icons": {
    "128": "images/128.png"
  },
  "permissions": [
    "scripting",
    "storage",
    "activeTab",
    "tabs",
    "webNavigation",
    "declarativeNetRequest",
    "declarativeNetRequestWithHostAccess",
    "declarativeNetRequestFeedback"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "chromium:service_worker": "./scripts/background.ts",
    "firefox:scripts": [
      "./scripts/background.ts"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "scripts/content_script.ts"
      ],
      "css": []
    }
  ],
  "action": {
    "default_popup": "public/popup.html",
    "default_icon": {
      "128": "images/128.png"
    }
  },
  "author": "Meisam Maani"
}